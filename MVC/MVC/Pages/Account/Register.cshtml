@page
@model MVC.Pages.Account.RegisterModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<body>
    <div class="container">
        <form method="post">
            <div class="form-group row">
                <label asp-for="UserInfo.Email" class="col-sm-8"></label>
                <div class="col-sm-8">
                    <input asp-for="UserInfo.Email" class="form-control" />
                    <span asp-validation-for="UserInfo.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="UserInfo.FName" class="col-sm-8"></label>
                <div class="col-sm-8">
                    <input asp-for="UserInfo.FName" class="form-control" />
                    <span asp-validation-for="UserInfo.FName" class="text-danger"></span>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-9 offset-sm-4">
                    <button type="submit" class="btn btn-primary" style="margin-top:20px;">Submit</button>
                </div>
            </div>
        </form>

    </div>
</body>